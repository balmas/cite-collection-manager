StringWriter writer = new StringWriter()
MarkupBuilder home = new MarkupBuilder(writer)

String code = request.getParameter("code")
String uri = request.getRequestURL().toString()

TokenResponse token = Globals.codeFlow(getClass().getClassLoader()).newTokenRequest(code).setRedirectUri(uri).execute()
System.out.println(token.getTokenType())

Globals.codeFlow(getClass().getClassLoader()).createAndStoreCredential(token,"administrator")

String authorized = (Globals.codeFlow(getClass().getClassLoader()).loadCredential('administrator') == null) ? "unauthorized" : "authorized"
System.out.println(authorized)

